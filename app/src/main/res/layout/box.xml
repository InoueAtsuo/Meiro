<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dot_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_dot_black">
        </ImageView>
        <ImageView
            android:id="@+id/block_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_horizontal_black">
        </ImageView>
        <ImageView
            android:id="@+id/dot_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_dot_black">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/block_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_vertical_black">
        </ImageView>
        <ImageView
            android:id="@+id/block_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_box_white">
        </ImageView>
        <ImageView
            android:id="@+id/block_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_vertical_black">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dot_bot_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_dot_black">
        </ImageView>
        <ImageView
            android:id="@+id/block_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_horizontal_black">
        </ImageView>
        <ImageView
            android:id="@+id/dot_bot_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_dot_black">
        </ImageView>
    </LinearLayout>
</LinearLayout>
